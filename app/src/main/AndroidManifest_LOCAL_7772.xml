<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.iastate.cs510.company2.socialpolling">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="edu.iastate.cs510.company2.activities.LoginActivity"
            android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="edu.iastate.cs510.company2.activities.RegisterActivity" />
        <activity android:name="edu.iastate.cs510.company2.activities.MainActivity"> </activity>
        <activity android:name="edu.iastate.cs510.company2.activities.CreatePollActivity" />
        <activity android:name="edu.iastate.cs510.company2.activities.ProfileDetailActivity" />
        <activity android:name="edu.iastate.cs510.company2.activities.VotingPollActivity"></activity>
        <activity android:name="edu.iastate.cs510.company2.activities.PollHistoryActivity" />
    </application>

</manifest>